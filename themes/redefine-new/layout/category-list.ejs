<div class="category-list-container">
	<div >
		<h1 class="category-header">
			<% const useCustomTitle = page.title.toLowerCase() !== "categories" && page.title.toLowerCase() !=="category" && page.title !=="分类" %>
			<% if (useCustomTitle) { %>
				<%= page.title %>
			<% } else { %>
				<%- __('categories') %>
			<% } %>
		</h1>
	</div>
	<div class="category-list-content">
		<%- list_categories(site.categories, { class: 'all-category', depth: 5,
		style: 'list', }) %>
	</div>
	<div class="category-comments">
		<% if (page.comment) { %> <%- partial('_partials/comments/comment') %>
		<% } %>
	</div>
</div>
